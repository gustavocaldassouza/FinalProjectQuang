@model FinalProjectQuang.Models.Appointment

@{
    ViewData["Title"] = "Concierge Booking";
}

<div class="container premium-container fade-in">
    <div class="row min-vh-75 align-items-center">
        <!-- Residence Details Column -->
        <div class="col-lg-5 mb-5 mb-lg-0">
            <div class="glass-card overflow-hidden shadow-lg p-0" style="border-radius: 1.5rem;">
                <div class="p-4 bg-primary text-white position-relative">
                    <h2 class="display-6 fw-bold mb-1">Residence Viewing</h2>
                    <p class="opacity-75 fs-6">Reserve your private tour of Unit @Model.Apartment?.ApartmentNumber</p>
                    <div class="position-absolute top-0 end-0 m-4 opacity-25">
                        <i class="bi bi-calendar-check display-1"></i>
                    </div>
                </div>
                <div class="p-4">
                    <div class="d-flex align-items-center mb-3 pb-3 border-bottom">
                        <div class="bg-primary bg-opacity-10 p-2 rounded-3 text-primary me-3">
                            <i class="bi bi-building fs-3"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold mb-0">@Model.Apartment?.Property?.Name</h6>
                            <p class="text-muted small mb-0">@Model.Apartment?.Property?.Address, @Model.Apartment?.Property?.City</p>
                        </div>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-6">
                            <div class="p-2 bg-light rounded-3 text-center">
                                <span class="d-block text-muted x-small fw-semibold text-uppercase mb-0">Monthly Rent</span>
                                <span class="fs-5 fw-bold text-primary">@Model.Apartment?.Rent.ToString("C")</span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="p-2 bg-light rounded-3 text-center">
                                <span class="d-block text-muted x-small fw-semibold text-uppercase mb-0">Unit Number</span>
                                <span class="fs-5 fw-bold text-dark">#@Model.Apartment?.ApartmentNumber</span>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info border-0 rounded-4 p-4 d-flex align-items-center bg-primary bg-opacity-5">
                        <i class="bi bi-info-circle-fill fs-3 text-primary me-3"></i>
                        <p class="small mb-0 text-dark opacity-75">Your requested appointment will be reviewed by our elite management team. You will receive a notification once confirmed.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Booking Form Column -->
        <div class="col-lg-6 offset-lg-1">
            <div class="p-3">
                <div class="mb-4">
                    <h2 class="fw-bold mb-2">Schedule Your Visit</h2>
                    <p class="text-muted small">Fill in your preferred schedule and dedicated concierge representative.</p>
                </div>

                <form asp-action="BookAppointment" id="bookingForm" class="row g-4">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ApartmentId" />

                    <div class="col-12">
                        <label class="form-label fs-6 fw-bold">Preferred Date & Time</label>
                        <div class="input-group input-group-lg shadow-sm">
                            <span class="input-group-text bg-white border-end-0 text-primary"><i class="bi bi-calendar-plus"></i></span>
                            <input asp-for="AppointmentDate" id="appointmentDate" class="form-control border-start-0 ps-0 fs-6" type="datetime-local" />
                        </div>
                        <span asp-validation-for="AppointmentDate" class="text-danger small mt-1 d-block"></span>
                        <div id="dateError" class="text-danger small mt-1" style="display:none;">Viewing must be scheduled at least 24 hours in advance for premium preparation.</div>
                    </div>

                    <div class="col-12">
                        <label class="form-label fs-6 fw-bold">Assigned Concierge</label>
                        <div class="input-group input-group-lg shadow-sm">
                            <span class="input-group-text bg-white border-end-0 text-primary"><i class="bi bi-person-badge"></i></span>
                            <select asp-for="ManagerId" class="form-select border-start-0 ps-0 fs-6" asp-items="ViewBag.Managers">
                                <option value="">-- Select Your Manager --</option>
                            </select>
                        </div>
                        <span asp-validation-for="ManagerId" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="col-12">
                        <label class="form-label fs-6 fw-bold">Special Requests / Notes</label>
                        <textarea asp-for="Notes" class="form-control fs-6 shadow-sm p-4" rows="4" style="border-radius: 1.5rem;" placeholder="Any specific details or requirements for your viewing experience?"></textarea>
                    </div>

                    <div class="col-12 pt-4">
                        <button type="submit" class="btn btn-premium btn-primary-premium w-100 py-3 fs-5 shadow-lg">
                            Request Private Viewing <i class="bi bi-arrow-right-short ms-2"></i>
                        </button>
                        <a asp-action="AvailableApartments" class="btn btn-link text-muted w-100 mt-3 text-decoration-none">
                            <i class="bi bi-chevron-left"></i> Return to Listing Portfolio
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('bookingForm').addEventListener('submit', function(e) {
            const dateInput = document.getElementById('appointmentDate');
            const selectedDate = new Date(dateInput.value);
            const now = new Date();
            const tomorrow = new Date(now.getTime() + 24 * 60 * 60 * 1000);

            if (selectedDate < tomorrow) {
                e.preventDefault();
                document.getElementById('dateError').style.display = 'block';
                dateInput.classList.add('is-invalid');
            } else {
                document.getElementById('dateError').style.display = 'none';
                dateInput.classList.remove('is-invalid');
            }

            const managerSelect = document.querySelector('select[name="ManagerId"]');
            if (!managerSelect.value) {
                e.preventDefault();
                managerSelect.classList.add('is-invalid');
            }
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
