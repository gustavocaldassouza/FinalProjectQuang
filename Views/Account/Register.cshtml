@{
    ViewData["Title"] = "Tenant Registration";
}

<div class="container premium-container fade-in">
    <div class="row min-vh-75 justify-content-center align-items-center">
        <div class="col-lg-5">
            <div class="glass-card shadow-lg p-0 overflow-hidden border-0" style="border-radius: 1rem;">
                <div class="p-4 bg-primary text-white text-center position-relative">
                    <div class="mb-2">
                        <i class="bi bi-person-plus-fill fs-1"></i>
                    </div>
                    <h4 class="fw-bold mb-1">Create Resident Account</h4>
                    <p class="opacity-75 small mb-0">Join our exclusive property network today.</p>
                </div>
                
                <div class="p-4">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger border-0 rounded-4 mb-4">
                            <i class="bi bi-exclamation-octagon-fill me-2"></i> @ViewBag.Error
                        </div>
                    }

                    <form asp-action="Register" method="post" class="row g-4">
                        @Html.AntiForgeryToken()
                        
                        <div class="col-12">
                            <label class="form-label fw-bold">Full Name</label>
                            <div class="input-group shadow-sm">
                                <span class="input-group-text bg-white border-end-0 text-primary"><i class="bi bi-person"></i></span>
                                <input name="fullName" type="text" class="form-control border-start-0 ps-0 fs-6" placeholder="John Doe" required />
                            </div>
                        </div>

                        <div class="col-12">
                            <label class="form-label fw-bold">Email Address</label>
                            <div class="input-group shadow-sm">
                                <span class="input-group-text bg-white border-end-0 text-primary"><i class="bi bi-envelope"></i></span>
                                <input name="email" type="email" class="form-control border-start-0 ps-0 fs-6" placeholder="name@rent.com" required />
                            </div>
                        </div>

                        <div class="col-12">
                            <label class="form-label fw-bold">Create Password</label>
                            <div class="input-group shadow-sm">
                                <span class="input-group-text bg-white border-end-0 text-primary"><i class="bi bi-shield-lock"></i></span>
                                <input name="password" type="password" class="form-control border-start-0 ps-0 fs-6" placeholder="••••••••" required />
                            </div>
                        </div>

                        <div class="col-12 pt-2">
                            <button type="submit" class="btn btn-premium btn-primary-premium w-100 py-2 shadow-sm rounded-pill">
                                Register Account <i class="bi bi-check2-circle ms-2"></i>
                            </button>
                        </div>
                    </form>

                    <div class="mt-4 text-center">
                        <p class="text-muted small">Already have an account? 
                            <a asp-action="Login" class="text-primary fw-bold text-decoration-none">Sign In Here</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
