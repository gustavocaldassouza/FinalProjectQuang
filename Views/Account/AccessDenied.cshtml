@{
    ViewData["Title"] = "Access Restricted";
}

<div class="container premium-container fade-in">
    <div class="row min-vh-75 justify-content-center align-items-center text-center">
        <div class="col-lg-6">
            <div class="glass-card shadow-lg p-5 border-0 rounded-5">
                <div class="mb-4">
                    <div class="bg-danger bg-opacity-10 text-danger rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 100px; height: 100px;">
                        <i class="bi bi-shield-lock-fill display-3"></i>
                    </div>
                    <h1 class="display-5 fw-bold text-dark mb-3">Access Denied</h1>
                    <p class="text-muted fs-5 mb-4">You do not have the required security clearing to access this sector of the property network.</p>
                </div>

                <div class="alert alert-warning border-0 rounded-4 mb-5 text-start">
                    <div class="d-flex gap-3">
                        <i class="bi bi-exclamation-triangle-fill fs-4"></i>
                        <div>
                            <h6 class="fw-bold mb-1">Administrative Protocol</h6>
                            <p class="mb-0 small opacity-75">Your current credentials do not include the roles needed for this specific management dashboard. Please contact the Estate Owner if you believe this is an error.</p>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-3">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-premium btn-primary-premium py-3 rounded-pill fs-5">
                        <i class="bi bi-house-door me-2"></i> Return to Main Hub
                    </a>
                    <a asp-controller="Account" asp-action="Logout" class="btn btn-light py-3 rounded-pill fw-bold text-muted border">
                        Switch Identity
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
