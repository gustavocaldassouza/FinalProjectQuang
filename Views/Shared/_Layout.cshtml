@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Luxury Property Rentals</title>
    
    <!-- CSS Frameworks -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Custom Site Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light">
    <header>
        <nav class="navbar navbar-expand-lg fixed-top shadow-sm px-4">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-primary d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-building-fill-check fs-2"></i>
                    <span class="d-none d-sm-inline">PropertyRental</span>
                </a>
                
                <button class="navbar-toggler border-0 shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (!User.IsInRole("Owner") && !User.IsInRole("Manager"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Tenant" asp-action="AvailableApartments">Rent Home</a>
                            </li>
                        }
                        
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown px-lg-3">
                                <a class="nav-link dropdown-toggle bg-primary bg-opacity-10 rounded-pill px-3" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-grid-fill me-1"></i> Dashboard
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow border-0 p-2 mt-3" style="border-radius: 1.5rem;">
                                    @if(User.IsInRole("Owner"))
                                    {
                                        <li><h6 class="dropdown-header">System Admin</h6></li>
                                        <li><a class="dropdown-item py-2" asp-controller="Admin" asp-action="Index"><i class="bi bi-shield-lock me-2 text-primary"></i>Manage Personnel</a></li>
                                    }
                                    @if(User.IsInRole("Manager"))
                                    {
                                        <li><h6 class="dropdown-header">Management Suite</h6></li>
                                        <li><a class="dropdown-item py-2" asp-controller="Manager" asp-action="Properties"><i class="bi bi-layout-text-window me-2 text-success"></i>Inventory Dashboard</a></li>
                                        <li><a class="dropdown-item py-2" asp-controller="Manager" asp-action="Appointments"><i class="bi bi-calendar-event me-2 text-success"></i>Appointments</a></li>
                                        <li><a class="dropdown-item py-2" asp-controller="Manager" asp-action="Messages"><i class="bi bi-chat-dots me-2 text-success"></i>Communication</a></li>
                                    }
                                    @if(User.IsInRole("Tenant"))
                                    {
                                        <li><h6 class="dropdown-header">Resident Services</h6></li>
                                        <li><a class="dropdown-item py-2" asp-controller="Tenant" asp-action="MyAppointments"><i class="bi bi-calendar2-check me-2 text-danger"></i>My Bookings</a></li>
                                    }
                                </ul>
                            </li>
                        }
                    </ul>
                    
                    <div class="d-flex align-items-center gap-3">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <div class="dropdown">
                                <a href="#" class="d-flex align-items-center text-dark text-decoration-none dropdown-toggle bg-white px-3 py-2 rounded-pill shadow-sm border" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle fs-5 me-2 text-primary"></i>
                                    <strong>@User.Identity.Name</strong>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow border-0 p-2 mt-3" style="border-radius: 1.2rem;">
                                    <li><a class="dropdown-item py-2 rounded-3 text-danger" asp-controller="Account" asp-action="Logout"><i class="bi bi-box-arrow-right me-2"></i>Sign Out</a></li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" class="btn btn-premium btn-primary-premium py-2 px-4 rounded-pill shadow-sm">
                                <i class="bi bi-key me-2"></i> Sign In
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-shrink-0">
        @RenderBody()
    </main>

    <footer class="footer mt-auto py-5 bg-white shadow-lg border-0">
        <div class="container py-4">
            <div class="row g-4">
                <div class="col-lg-5 mb-4 mb-lg-0">
                    <a class="d-inline-flex align-items-center mb-3 link-dark text-decoration-none fw-bold text-primary fs-3" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-building-fill-check me-2"></i> PropertyRental
                    </a>
                    <p class="text-muted pe-lg-5">Redefining luxury property management with intuitive tools for owners, managers, and the tenants we serve. Experience seamless living through elite technology.</p>
                </div>
                <div class="col-6 col-lg-2 offset-lg-1 mb-3">
                    <h5 class="fw-bold mb-4">Portals</h5>
                    <ul class="list-unstyled d-grid gap-2 text-muted">
                        <li><a href="#" class="text-reset text-decoration-none hover-link">Owner Console</a></li>
                        <li><a href="#" class="text-reset text-decoration-none hover-link">Manager Suite</a></li>
                        <li><a href="#" class="text-reset text-decoration-none hover-link">Tenant Services</a></li>
                    </ul>
                </div>
                <div class="col-6 col-lg-2 mb-3">
                    <h5 class="fw-bold mb-4">Legal</h5>
                    <ul class="list-unstyled d-grid gap-2 text-muted">
                        <li><a href="#" class="text-reset text-decoration-none hover-link">Privacy Policy</a></li>
                        <li><a href="#" class="text-reset text-decoration-none hover-link">Terms of Service</a></li>
                        <li><a href="#" class="text-reset text-decoration-none hover-link">Cookie Preferences</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 mb-3">
                    <h5 class="fw-bold mb-4">Social</h5>
                    <div class="d-flex gap-3 fs-3">
                        <a href="#" class="text-primary"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="text-primary"><i class="bi bi-linkedin"></i></a>
                        <a href="#" class="text-primary"><i class="bi bi-facebook"></i></a>
                    </div>
                </div>
            </div>
            <hr class="my-5 opacity-10">
            <div class="text-center text-muted small">
                <p class="mb-0">&copy; 2026 - PropertyRental Advanced Ecosystem. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- Toast Container -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="statusToast" class="toast border-0 shadow-lg" role="alert" aria-live="assertive" aria-atomic="true" style="border-radius: 1rem;">
            <div class="toast-header bg-primary text-white border-0" style="border-radius: 1rem 1rem 0 0;">
                <i class="bi bi-info-circle me-2"></i>
                <strong class="me-auto">System Notification</strong>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body bg-white text-dark small p-3" style="border-radius: 0 0 1rem 1rem;">
                <span id="toastMessage"></span>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            var message = '@TempData["StatusMessage"]';
            if (message && message !== '') {
                $('#toastMessage').text(message);
                var toastEl = document.getElementById('statusToast');
                var toast = new bootstrap.Toast(toastEl);
                toast.show();
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
    
    <style>
        .hover-link:hover {
            color: var(--primary-color) !important;
            padding-left: 5px;
            transition: all 0.2s ease;
        }
    </style>
</body>
</html>
