@model FinalProjectQuang.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<link rel="stylesheet" href="~/css/admin.css" />

<div class="admin-container fade-in">
    <div class="admin-header">
        <h1 class="text-danger">Delete User Account</h1>
        <a asp-action="Index" class="btn-premium btn-secondary-premium">Back to List</a>
    </div>

    <div class="admin-card">
        <div class="alert alert-warning py-3 mb-4" style="background: #fff3cd; border-left: 5px solid #ffc107; padding: 1rem;">
            <strong>Warning!</strong> Are you sure you want to delete this user? This action cannot be undone.
        </div>

        <dl class="row mb-5">
            <dt class = "col-sm-3 form-label">Full Name</dt>
            <dd class = "col-sm-9">@Model.FullName</dd>
            
            <dt class = "col-sm-3 form-label">Email Address</dt>
            <dd class = "col-sm-9">@Model.Email</dd>
            
            <dt class = "col-sm-3 form-label">Role</dt>
            <dd class = "col-sm-9">@Model.Role</dd>
        </dl>
        
        <form asp-action="Delete">
            <input type="hidden" asp-for="UserId" />
            <button type="submit" class="btn-premium btn-danger-premium py-3 px-5">Confirm Delete</button>
        </form>
    </div>
</div>
