@model IEnumerable<FinalProjectQuang.Models.User>

@{
    ViewData["Title"] = "System Administration Hub";
}

<div class="container premium-container fade-in">
    <div class="row align-items-center mb-4">
        <div class="col-lg-5">
            <h1 class="h2 fw-bold mb-1">User Command Center</h1>
            <p class="text-muted small">Administrative authority over property managers and residents.</p>
        </div>
        <div class="col-lg-4">
            <div class="input-group shadow-sm">
                <span class="input-group-text bg-white border-end-0 text-primary"><i class="bi bi-search"></i></span>
                <input type="text" id="adminSearch" class="form-control border-start-0 ps-0 small" placeholder="Search by name, email or role..." />
            </div>
        </div>
        <div class="col-lg-3 text-lg-end">
            <a asp-action="Create" class="btn btn-premium btn-primary-premium py-2 px-4 shadow-sm rounded-pill">
                <i class="bi bi-person-plus-fill me-2"></i> Provision New Account
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="col-12 text-center py-5">
            <div class="glass-card p-5 rounded-5 border border-dashed">
                <i class="bi bi-people display-1 text-muted opacity-25 mb-4"></i>
                <h3 class="fw-bold">No accounts registered in system</h3>
                <p class="text-muted">Initiate the management cycle by adding your first administrative or resident account.</p>
                <a asp-action="Create" class="btn btn-primary mt-3 rounded-pill px-4">Create User Account</a>
            </div>
        </div>
    }
    else
    {
        <div class="glass-card shadow-lg p-0 overflow-hidden border-0 mb-5">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-primary bg-opacity-10 text-primary-emphasis fw-bold fs-6">
                        <tr>
                            <th class="ps-5 py-4">Account Holder</th>
                            <th class="py-4">Digital Identity (Email)</th>
                            <th class="py-4 text-center">System Authority (Role)</th>
                            <th class="py-4">Created Date</th>
                            <th class="pe-5 py-4 text-end">Administration</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                            <tr class="transition-all hover-light user-row" 
                                data-search="@(item.FullName.ToLower() + " " + item.Email.ToLower() + " " + item.Role.ToString().ToLower())">
                                <td class="ps-4 py-3">
                                    <div class="d-flex align-items-center gap-2">
                                        <div class="bg-primary bg-opacity-10 p-1 rounded text-primary">
                                            <i class="bi bi-person-check fs-5"></i>
                                        </div>
                                        <div>
                                            <h6 class="fw-bold mb-0 small">@item.FullName</h6>
                                            <small class="text-muted x-small">UID: #@item.UserId</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="py-3">
                                    <span class="text-dark small">@item.Email</span>
                                </td>
                                <td class="py-3 text-center">
                                    @{
                                        string roleClass = item.Role switch {
                                            FinalProjectQuang.Models.UserRole.Owner => "bg-dark text-white",
                                            FinalProjectQuang.Models.UserRole.Manager => "bg-primary bg-opacity-10 text-primary border-primary border-opacity-25",
                                            FinalProjectQuang.Models.UserRole.Tenant => "bg-success bg-opacity-10 text-success border-success border-opacity-25",
                                            _ => "bg-secondary text-white"
                                        };
                                    }
                                    <span class="badge @roleClass border px-2 py-1 rounded-pill fw-bold x-small" style="min-width: 80px;">
                                        @item.Role
                                    </span>
                                </td>
                                <td class="py-3">
                                    <span class="text-muted x-small">Dec 12, 2025</span>
                                </td>
                                <td class="pe-5 py-4 text-end">
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-outline-primary py-2 px-3 rounded-start-pill border-opacity-25 shadow-sm">
                                            <i class="bi bi-gear-fill me-1"></i> Edit
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-light bg-opacity-50 py-2 px-3 border-opacity-25 shadow-sm">
                                            <i class="bi bi-card-text"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-outline-danger py-2 px-3 rounded-end-pill border-opacity-25 shadow-sm">
                                            <i class="bi bi-person-x-fill"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

<style>
    .hover-light:hover {
        background-color: rgba(37, 99, 235, 0.02) !important;
    }
    .transition-all {
        transition: all 0.2s ease;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            const searchInput = $('#adminSearch');
            const rows = $('.user-row');

            searchInput.on('input', function() {
                const query = $(this).val().toLowerCase();
                
                rows.each(function() {
                    const row = $(this);
                    const searchData = row.data('search');
                    
                    if (searchData.includes(query)) {
                        row.show();
                    } else {
                        row.hide();
                    }
                });
            });
        });
    </script>
}
