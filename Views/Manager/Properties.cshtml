@model IEnumerable<FinalProjectQuang.Models.Property>

@{
    ViewData["Title"] = "Manage Properties";
}

<link rel="stylesheet" href="~/css/admin.css" />

<div class="admin-container fade-in">
    <div class="admin-header">
        <h1>Properties Directory</h1>
        <a asp-action="CreateProperty" class="btn-premium btn-primary-premium">+ Add Property</a>
    </div>

    <div class="row">
        @foreach (var item in Model) {
            <div class="col-md-6 mb-4">
                <div class="admin-card">
                    <h3 class="mb-2">@item.Name</h3>
                    <p class="text-muted"><i class="bi bi-geo-alt"></i> @item.Address, @item.City</p>
                    <p><strong>Owner:</strong> @item.Owner?.FullName</p>
                    <div class="mt-3">
                        <a asp-action="PropertyDetails" asp-route-id="@item.PropertyId" class="btn-premium btn-secondary-premium btn-sm">Details</a>
                        <a asp-action="EditProperty" asp-route-id="@item.PropertyId" class="btn-premium btn-primary-premium btn-sm" style="background:#34495e">Edit</a>
                        <a asp-action="Apartments" asp-route-propertyId="@item.PropertyId" class="btn-premium btn-primary-premium btn-sm">View Apartments</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
