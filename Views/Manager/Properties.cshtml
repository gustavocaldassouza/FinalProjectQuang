@model IEnumerable<FinalProjectQuang.Models.Property>

@{
    ViewData["Title"] = "Real Estate Portfolio Management";
}

<div class="container premium-container fade-in">
    <div class="row align-items-center mb-4">
        <div class="col-lg-8">
            <h1 class="h2 fw-bold mb-1">Portfolio Management</h1>
            <p class="text-muted small">Administrative overview of all premium estates and properties under your supervision.</p>
        </div>
        <div class="col-lg-4 text-lg-end">
            <a asp-action="CreateProperty" class="btn btn-premium btn-primary-premium py-2 px-4 shadow-sm rounded-pill">
                <i class="bi bi-plus-lg me-2"></i> Register New Estate
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="col-12 text-center py-5">
            <div class="glass-card p-5 rounded-5 border border-dashed">
                <i class="bi bi-buildings display-1 text-muted opacity-25 mb-4"></i>
                <h3 class="fw-bold">No Properties Registered</h3>
                <p class="text-muted">Start by adding your first luxury property to the management suite.</p>
                <a asp-action="CreateProperty" class="btn btn-primary mt-3 rounded-pill px-4">Begin Registration</a>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model) {
                <div class="col-lg-6">
                    <div class="glass-card h-100 p-0 overflow-hidden shadow-hover border-0">
                        <div class="row g-0">
                            <div class="col-md-4 bg-primary bg-opacity-10 d-flex flex-column align-items-center justify-content-center text-primary p-4">
                                <i class="bi bi-building fs-1 mb-2"></i>
                                <span class="badge bg-primary bg-opacity-25 text-primary-emphasis rounded-pill px-3">Estate Admin</span>
                            </div>
                            <div class="col-md-9 p-4 d-flex flex-column h-100">
                                <div class="mb-2">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <h2 class="fw-bold mb-0 h5">@item.Name</h2>
                                        <div class="dropdown">
                                            <button class="btn btn-link link-dark p-0" data-bs-toggle="dropdown"><i class="bi bi-three-dots fs-4"></i></button>
                                            <ul class="dropdown-menu border-0 shadow-lg p-2 rounded-4">
                                                <li><a class="dropdown-item py-2 rounded-3" asp-action="EditProperty" asp-route-id="@item.PropertyId"><i class="bi bi-pencil-square me-2 text-primary"></i>Modify details</a></li>
                                                <li><a class="dropdown-item py-2 rounded-3 text-danger" href="#"><i class="bi bi-trash-fill me-2"></i>Decommission</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <p class="text-muted mb-2 x-small d-flex align-items-center gap-2">
                                        <i class="bi bi-geo-alt-fill text-danger opacity-75"></i> @item.Address, @item.City
                                    </p>
                                    <div class="small text-muted d-flex align-items-center gap-2 mb-4">
                                        <i class="bi bi-person-badge-fill text-muted"></i> Proprietary Owner: <strong>@item.Owner?.FullName</strong>
                                    </div>
                                </div>
                                <div class="mt-auto d-flex gap-2">
                                    <a asp-action="Apartments" asp-route-propertyId="@item.PropertyId" class="btn btn-premium btn-primary-premium flex-grow-1 py-2 rounded-pill">
                                        Manage Inventory
                                    </a>
                                    <a asp-action="PropertyDetails" asp-route-id="@item.PropertyId" class="btn btn-light border-0 py-2 rounded-pill px-3">
                                        <i class="bi bi-arrow-right"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
