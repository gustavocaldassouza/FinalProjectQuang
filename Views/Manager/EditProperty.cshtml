@model FinalProjectQuang.Models.Property

@{
    ViewData["Title"] = "Edit Property";
}

<link rel="stylesheet" href="~/css/admin.css" />

<div class="admin-container fade-in">
    <div class="admin-header">
        <h1>Edit Property: @Model.Name</h1>
        <a asp-action="Properties" class="btn-premium btn-secondary-premium">Back</a>
    </div>

    <div class="admin-card">
        <form asp-action="EditProperty">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PropertyId" />
            
            <div class="form-group">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address" class="form-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="City" class="form-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="OwnerId" class="form-label">Owner</label>
                <select asp-for="OwnerId" class="form-control" asp-items="ViewBag.OwnerId"></select>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn-premium btn-primary-premium w-100">Save Changes</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
