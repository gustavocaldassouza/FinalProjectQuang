@model IEnumerable<FinalProjectQuang.Models.Appointment>

@{
    ViewData["Title"] = "Executive Appointment Scheduler";
}

<div class="container premium-container fade-in">
    <div class="row align-items-center mb-4">
        <div class="col-lg-8">
            <h1 class="h2 fw-bold mb-1">Viewing Schedule</h1>
            <p class="text-muted small">Coordinate and prepare for property viewings with your potential residents.</p>
        </div>
        <div class="col-lg-4 text-lg-end">
            <div class="glass-card shadow-sm p-2 d-inline-flex gap-3">
                <div class="text-center">
                    <span class="d-block h5 fw-bold text-warning mb-0">@Model.Count(a => !a.IsConfirmed)</span>
                    <span class="text-muted x-small fw-bold">Pending</span>
                </div>
                <div class="vr text-muted opacity-25"></div>
                <div class="text-center">
                    <span class="d-block h5 fw-bold text-success mb-0">@Model.Count(a => a.IsConfirmed)</span>
                    <span class="text-muted x-small fw-bold">Confirmed</span>
                </div>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="col-12 text-center py-5">
            <div class="glass-card p-5 rounded-5 border border-dashed">
                <i class="bi bi-calendar-x display-1 text-muted opacity-25 mb-4"></i>
                <h3 class="fw-bold">No viewings currently scheduled</h3>
                <p class="text-muted">New requests from potential residents will appear here.</p>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 mb-2">
                    <div class="glass-card h-100 p-0 overflow-hidden shadow-hover border-0" 
                         style="border-top: @(item.IsConfirmed ? "6px solid #10b981" : "6px solid #f59e0b") !important;">
                        <div class="p-4">
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <span class="badge @(item.IsConfirmed ? "bg-success bg-opacity-10 text-success border-success" : "bg-warning bg-opacity-10 text-warning border-warning") border-2 px-3 py-2 rounded-pill fw-bold">
                                    <i class="bi @(item.IsConfirmed ? "bi-check-circle-fill" : "bi-hourglass-split") me-1"></i>
                                    @(item.IsConfirmed ? "Appointment Confirmed" : "Awaiting Review")
                                </span>
                                <small class="text-muted fw-bold opacity-50">#AP-@item.AppointmentId</small>
                            </div>

                            <div class="mb-3">
                                <h3 class="fw-bold fs-4 mb-0">
                                    <i class="bi bi-clock text-primary me-1"></i> @item.AppointmentDate.ToString("hh:mm tt")
                                </h3>
                                <p class="text-dark fw-semibold mb-0 small">@item.AppointmentDate.ToString("MMMM dd, yyyy")</p>
                            </div>

                            <hr class="opacity-10">

                            <div class="vstack gap-3 mb-4">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="bg-primary bg-opacity-10 p-2 rounded-circle text-primary">
                                        <i class="bi bi-person-fill fs-5"></i>
                                    </div>
                                    <div>
                                        <small class="d-block text-muted">Potential Tenant</small>
                                        <span class="fw-bold">@item.Tenant?.FullName</span>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center gap-3">
                                    <div class="bg-dark bg-opacity-5 p-2 rounded-circle text-dark">
                                        <i class="bi bi-door-open-fill fs-5"></i>
                                    </div>
                                    <div>
                                        <small class="d-block text-muted">Requested Unit</small>
                                        <span class="fw-bold">Unit @item.Apartment?.ApartmentNumber <span class="text-muted fw-normal opacity-75">@@ @item.Apartment?.Property?.Name</span></span>
                                    </div>
                                </div>
                            </div>
                            
                            @if (!string.IsNullOrEmpty(item.Notes))
                            {
                                <div class="bg-light p-3 rounded-4 small text-muted mb-4 border-0">
                                    <i class="bi bi-chat-left-text me-2"></i> <strong>Inquiry Note:</strong><br>
                                    <span class="fst-italic">"@item.Notes"</span>
                                </div>
                            }

                            <div class="mt-auto d-grid gap-2">
                                @if (!item.IsConfirmed)
                                {
                                    <form asp-action="ConfirmAppointment" method="post" class="d-grid shadow-sm rounded-3">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="appointmentId" value="@item.AppointmentId" />
                                        <button type="submit" class="btn btn-premium btn-primary-premium py-2 rounded-pill fw-bold small">
                                            <i class="bi bi-check2-circle me-1"></i> Confirm Viewing
                                        </button>
                                    </form>
                                }
                                <div class="d-flex gap-2">
                                    <button class="btn btn-light bg-opacity-25 flex-grow-1 py-2 rounded-pill fw-semibold text-muted shadow-sm" 
                                            data-bs-toggle="modal" data-bs-target="#rescheduleModal-@item.AppointmentId">
                                        <i class="bi bi-calendar-event me-1"></i> Reschedule
                                    </button>
                                    <form asp-action="DeleteAppointment" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to cancel this viewing appointment?')">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="appointmentId" value="@item.AppointmentId" />
                                        <button type="submit" class="btn btn-outline-danger border-0 bg-danger bg-opacity-10 py-2 px-3 rounded-circle shadow-sm" title="Cancel Appointment">
                                            <i class="bi bi-x-lg"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@if (Model.Any())
{
    @foreach (var item in Model)
    {
        <!-- Reschedule Modal -->
        <div class="modal fade" id="rescheduleModal-@item.AppointmentId" tabindex="-1" aria-hidden="true" style="z-index: 9999;">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content border-0 shadow-lg rounded-4 overflow-hidden">
                    <div class="modal-header border-0 pb-0 pt-4 px-4">
                        <h5 class="modal-title fw-bold text-dark">Reschedule Viewing</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form asp-action="RescheduleAppointment" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="appointmentId" value="@item.AppointmentId" />
                        <div class="modal-body py-4 px-4">
                            <div class="mb-4 text-center bg-light p-3 rounded-4">
                                <span class="d-block text-muted x-small text-uppercase fw-bold mb-1">Current Appointment</span>
                                <span class="fw-bold text-dark">@item.AppointmentDate.ToString("MMMM dd, hh:mm tt")</span>
                            </div>
                            <div class="form-group">
                                <label class="form-label fw-bold small mb-2 text-primary"><i class="bi bi-calendar-plus me-1"></i> New Target Date & Time</label>
                                <input type="datetime-local" name="newDate" class="form-control form-control-lg rounded-4 border-2 border-primary border-opacity-10 shadow-sm" 
                                       value="@item.AppointmentDate.ToString("yyyy-MM-ddTHH:mm")" required />
                            </div>
                        </div>
                        <div class="modal-footer border-0 pt-0 pb-4 px-4 justify-content-center flex-column gap-2">
                            <button type="submit" class="btn btn-premium btn-primary-premium rounded-pill w-100 py-3 shadow">
                                <i class="bi bi-check-circle-fill me-2"></i> Update viewing Schedule
                            </button>
                            <button type="button" class="btn btn-link link-muted small text-decoration-none" data-bs-dismiss="modal">Keep existing time</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
}
