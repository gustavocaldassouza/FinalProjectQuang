@{
    ViewData["Title"] = "Luxury Property Rentals";
}

<div class="hero-section text-center fade-in" style="background-image: url('/images/exterior1.png');">
    <div class="hero-overlay"></div>
    <div class="container hero-content">
        <h1 class="display-3 fw-bold mb-3">Elevate Your Living Experience</h1>
        <p class="lead mb-4 fs-5 text-white">Discover premium apartments, manage your portfolio, and find your next home with our state-of-the-art rental management platform.</p>
        <div class="d-flex justify-content-center gap-3">
            @if (!User.IsInRole("Owner") && !User.IsInRole("Manager"))
            {
                <a asp-controller="Tenant" asp-action="AvailableApartments" class="btn btn-premium btn-primary-premium px-4 py-2 fw-bold">
                    <i class="bi bi-search"></i> Find Your Home
                </a>
            }
            else
            {
                <a href="#portals" class="btn btn-premium btn-primary-premium px-4 py-2 fw-bold">
                    <i class="bi bi-grid-fill"></i> Access Dashboard
                </a>
            }
            <a href="#portals" class="btn btn-premium btn-light-premium px-4 py-2 fw-bold bg-white text-dark border-0 hover-scale">
                Explore Portals
            </a>
        </div>
    </div>
</div>

<div id="portals" class="container py-4 my-4">
    <div class="row text-center mb-4">
        <div class="col-lg-8 mx-auto">
            <h2 class="display-5 fw-bold mb-3">One Central Hub, All Your Needs</h2>
            <p class="text-muted fs-6">Tailored experiences for property owners, dedicated managers, and potential tenants looking for their dream residence.</p>
        </div>
    </div>
    
    <div class="row g-4 justify-content-center">
        <!-- Owners / Administrators -->
        <div class="col-md-4">
            <div class="admin-card h-100 p-4 shadow-sm border">
                <div class="icon-box bg-primary bg-opacity-10 text-primary rounded-circle mb-4 mx-auto d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                    <i class="bi bi-shield-check display-4"></i>
                </div>
                <h3 class="fw-bold mb-3">Owners & Admin</h3>
                <ul class="list-unstyled text-start mb-4 small text-muted">
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-primary me-2"></i> Manage property manager accounts</li>
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-primary me-2"></i> Oversee potential tenant listings</li>
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-primary me-2"></i> Full system orchestration</li>
                </ul>
                <a asp-controller="Admin" asp-action="Index" class="btn btn-premium btn-primary-premium w-100">Enter Admin Portal</a>
            </div>
        </div>

        <!-- Property Managers -->
        <div class="col-md-4">
            <div class="admin-card h-100 p-4 shadow-sm border border-primary border-opacity-10">
                <div class="icon-box bg-success bg-opacity-10 text-success rounded-circle mb-4 mx-auto d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                    <i class="bi bi-building display-4"></i>
                </div>
                <h3 class="fw-bold mb-3">Property Managers</h3>
                <ul class="list-unstyled text-start mb-4 small text-muted">
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i> Real-time apartment status tracking</li>
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i> Direct messaging with tenants</li>
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i> Seamless viewing appointments</li>
                </ul>
                <a asp-controller="Manager" asp-action="Properties" class="btn btn-premium w-100" style="background: linear-gradient(135deg, #059669, #10b981); color: white;">Manage Portfolios</a>
            </div>
        </div>

        <!-- Potential Tenants -->
        <div class="col-md-4">
            <div class="admin-card h-100 p-4 shadow-sm border">
                <div class="icon-box bg-warning bg-opacity-10 text-warning rounded-circle mb-4 mx-auto d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                    <i class="bi bi-house-heart display-4"></i>
                </div>
                <h3 class="fw-bold mb-3">Potential Tenants</h3>
                <ul class="list-unstyled text-start mb-4 small text-muted">
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-warning me-2"></i> Curated luxury home listings</li>
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-warning me-2"></i> Easy appointment scheduling</li>
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-warning me-2"></i> Direct communication channel</li>
                </ul>
                <a asp-controller="Tenant" asp-action="AvailableApartments" class="btn btn-premium btn-danger-premium w-100">Start Your Search</a>
            </div>
        </div>
    </div>
</div>

<div class="bg-white py-5">
    <div class="container text-center">
        <h3 class="fw-bold mb-4">Trusted by over 1,500+ Luxury Residences</h3>
        <div class="d-flex flex-wrap justify-content-center gap-5 opacity-50 grayscale">
            <i class="bi bi-buildings-fill fs-2"></i>
            <i class="bi bi-diamond-fill fs-2"></i>
            <i class="bi bi-award-fill fs-2"></i>
            <i class="bi bi-star-fill fs-2"></i>
            <i class="bi bi-bookmark-star-fill fs-2"></i>
        </div>
    </div>
</div>

<style>
    .hover-scale:hover {
        transform: scale(1.05);
        transition: all 0.3s ease;
    }
    .hero-section {
        border-radius: 0 0 3rem 3rem !important;
    }
</style>
